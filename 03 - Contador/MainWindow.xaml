<Window x:Class="_03___Contador.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_03___Contador"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.Background>
            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                <GradientStop Color="#FFFFA2A2" Offset="1"/>
                <GradientStop Color="#FFF0DCEE" Offset="0.154"/>
                <GradientStop Color="#FFE6C2C8" Offset="0.433"/>
            </LinearGradientBrush>
        </Grid.Background>
        <Button x:Name="btnIncrementar" Content="Incrementar" RenderTransformOrigin="0.5,0.5" BorderBrush="White" Foreground="#FFFCFCFC" FontSize="25" FontFamily="Arial Narrow" Margin="0,339,0,0" Click="Button_Click" HorizontalAlignment="Center" VerticalAlignment="Top" Height="54" Width="202">
            <Button.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="#FF652828" Offset="0.99"/>
                    <GradientStop Color="#FFFF8686" Offset="0.099"/>
                </LinearGradientBrush>
            </Button.Background>
            <Button.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="-0.062"/>
                    <TranslateTransform/>
                </TransformGroup>
            </Button.RenderTransform>
        </Button>
        <Label x:Name="lblTitulo" Content="Contador de Cliques" HorizontalAlignment="Center" Margin="0,59,0,0" VerticalAlignment="Top" FontFamily="Times New Roman" FontSize="48" RenderTransformOrigin="0.513,0.703"/>
        <Label x:Name="lblContador" Content="0" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="72" Height="122" Width="686" HorizontalContentAlignment="Center" Cursor="UpArrow" RenderTransformOrigin="0.5,0.5">
            <Label.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform AngleX="0.798"/>
                    <RotateTransform/>
                    <TranslateTransform X="0.53"/>
                </TransformGroup>
            </Label.RenderTransform>
        </Label>

    </Grid>
</Window>
