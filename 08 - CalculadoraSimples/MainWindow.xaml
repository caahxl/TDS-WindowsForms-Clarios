        <Button x:Name="btnUm" Style="{StaticResource BotaoArredondado}" Content="1" HorizontalAlignment="Left" Margin="21,407,0,0" VerticalAlignment="Top" Width="85" Height="80" FontSize="24" Click="btnUm_Click" BorderBrush="Black" BorderThickness="1,1,6,6" Foreground="White">
            <Button.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="#FF737373"/>
                    <GradientStop Color="#FF424242" Offset="1"/>
                </LinearGradientBrush>
            </Button.Background>
        </Button>
        <Button x:Name="btnQuatro" Style="{StaticResource BotaoArredondado}" Content="4" HorizontalAlignment="Left" Margin="21,310,0,0" VerticalAlignment="Top" Width="85" Height="80" RenderTransformOrigin="0.507,0.538" FontSize="24" Foreground="White" BorderThickness="1,1,6,6" BorderBrush="Black" Click="btnQuatro_Click">
            <Button.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
