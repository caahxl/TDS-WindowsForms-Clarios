        <Button x:Name="btnSeta" Style="{StaticResource BotaoArredondado}" Content="⬅" HorizontalAlignment="Left" Margin="225,116,0,0" VerticalAlignment="Top" FontSize="24" Width="86" Height="80" BorderThickness="1,1,6,6" BorderBrush="Black" Click="btnSeta_Click" Foreground="White">
