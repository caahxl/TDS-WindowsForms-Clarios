        <Button x:Name="btnSoma" Style="{StaticResource BotaoArredondado}" Content="+" HorizontalAlignment="Left" Margin="326,407,0,0" VerticalAlignment="Top" Width="85" Height="80" FontSize="24" Foreground="White" BorderThickness="1,1,6,6" BorderBrush="Black" Click="btnSoma_Click">
            <Button.Background>
