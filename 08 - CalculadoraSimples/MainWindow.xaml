        <Button x:Name="btnCinco" Style="{StaticResource BotaoArredondado}" Content="5" HorizontalAlignment="Left" Margin="126,310,0,0" VerticalAlignment="Top" Width="85" Height="80" FontSize="24" BorderBrush="Black" Foreground="White" BorderThickness="1,1,6,6" Click="btnCinco_Click">
