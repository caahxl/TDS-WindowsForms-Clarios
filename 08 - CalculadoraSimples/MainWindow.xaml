                    <GradientStop Color="#FF379AFF"/>
                    <GradientStop Color="#FF05305C" Offset="1"/>
                </LinearGradientBrush>
            </Button.Background>
        </Button>
        <TextBox x:Name="txtResultado" HorizontalAlignment="Left" Margin="21,13,0,0" VerticalAlignment="Top" Width="390" Height="87" Background="#FFE2E1E1" BorderBrush="Black" FontSize="50" TextAlignment="Right" TextWrapping="Wrap" BorderThickness="1,1,6,6"/>
