            </Button.Background>
        </Button>
        <Button x:Name="btnMultiplicacao" Style="{StaticResource BotaoArredondado}" Content="×" HorizontalAlignment="Left" Margin="326,213,0,0" VerticalAlignment="Top" Width="85" Height="80" FontSize="24" Foreground="White" BorderBrush="Black" BorderThickness="1,1,6,6" Click="btnMultiplicacao_Click">
