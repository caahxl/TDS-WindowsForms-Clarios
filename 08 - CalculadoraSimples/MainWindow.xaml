        <Button x:Name="btnIgual" Style="{StaticResource BotaoArredondado}" Content="=" HorizontalAlignment="Left" Margin="326,502,0,0" VerticalAlignment="Top" FontSize="24" Width="85" Height="80" BorderBrush="Black" Foreground="White" BorderThickness="1,1,6,6" Click="btnIgual_Click">
