        </Button>
        <Button x:Name="btnSeis" Style="{StaticResource BotaoArredondado}" Content="6" HorizontalAlignment="Left" Margin="226,310,0,0" VerticalAlignment="Top" RenderTransformOrigin="1.423,-1.725" Width="85" Height="80" FontSize="24" BorderBrush="Black" Foreground="White" BorderThickness="1,1,6,6" Click="btnSeis_Click">
            <Button.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
