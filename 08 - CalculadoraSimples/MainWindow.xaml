<Window x:Class="_08___CalculadoraSimples.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_08___CalculadoraSimples"
        mc:Ignorable="d"
        Title="MainWindow" Height="617" Width="438" Background="{DynamicResource {x:Static SystemColors.HighlightTextBrushKey}}">
    <Grid>
        <Grid.Background>
            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                <GradientStop Color="#FF002041"/>
                <GradientStop Color="#FFD1E8FF" Offset="1"/>
                <GradientStop Color="#FF62A9F0" Offset="0.487"/>
            </LinearGradientBrush>
        </Grid.Background>
        <Button x:Name="btnApagar" Style="{StaticResource BotaoArredondado}" Content="C" HorizontalAlignment="Left" Margin="21,116,0,0" VerticalAlignment="Top" Height="80" Width="85" FontSize="24" Foreground="White" BorderBrush="Black" BorderThickness="1,1,6,6" Click="btnApagar_Click">
            <Button.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="Red"/>
                    <GradientStop Color="#FFAB0505" Offset="1"/>
                </LinearGradientBrush>
            </Button.Background>
        </Button>
        <Button x:Name="btnDivisao" Style="{StaticResource BotaoArredondado}" Content="÷" HorizontalAlignment="Left" Margin="326,116,0,0" VerticalAlignment="Top" Width="85" Height="80" FontSize="24" Foreground="White" BorderThickness="1,1,6,6" Click="btnDivisao_Click">
            <Button.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="#FF379AFF"/>
                    <GradientStop Color="#FF05305C" Offset="1"/>
                </LinearGradientBrush>
            </Button.Background>
            <Button.BorderBrush>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="Black"/>
                    <GradientStop Color="Black" Offset="1"/>
                </LinearGradientBrush>
            </Button.BorderBrush>
        </Button>
        <Button x:Name="btnSete" Style="{StaticResource BotaoArredondado}" Content="7" HorizontalAlignment="Left" Margin="21,213,0,0" VerticalAlignment="Top" Width="85" Height="80" FontSize="24" BorderThickness="1,1,6,6" BorderBrush="Black" Foreground="White" Click="btnSete_Click">
            <Button.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="#FF737373"/>
                    <GradientStop Color="#FF424242" Offset="1"/>
                </LinearGradientBrush>
            </Button.Background>
        </Button>
        <Button x:Name="btnOito" Style="{StaticResource BotaoArredondado}" Content="8" HorizontalAlignment="Left" Margin="126,213,0,0" VerticalAlignment="Top" Width="85" Height="80" FontSize="24" BorderBrush="Black" BorderThickness="1,1,6,6" Foreground="White" Click="btnOito_Click">
            <Button.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="#FF737373"/>
                    <GradientStop Color="#FF424242" Offset="1"/>
