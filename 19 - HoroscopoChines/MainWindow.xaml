<Window x:Class="_19___HoroscopoChines.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_19___HoroscopoChines"
        mc:Ignorable="d"
        Title="MainWindow" Height="495" Width="800">
    <Grid Background="{DynamicResource {x:Static SystemColors.MenuBarBrushKey}}" Margin="0,0,0,7">
        <TextBlock HorizontalAlignment="Center" Margin="0,20,0,0" TextWrapping="Wrap" Text="Horóscopo Chinês" VerticalAlignment="Top" FontSize="36" FontWeight="Bold"/>
        <TextBlock HorizontalAlignment="Center" Margin="0,78,0,0" TextWrapping="Wrap" Text="Informe o ano do seu nascimento para consultar o signo chinês" VerticalAlignment="Top" FontSize="20" Width="592" TextAlignment="Center" FontStyle="Italic"/>
        <TextBox x:Name="txtAno" HorizontalAlignment="Center" TextWrapping="Wrap" VerticalAlignment="Top" Width="308" Height="43" BorderBrush="Black" BorderThickness="1,1,4,4" Margin="0,177,0,0" FontSize="24"/>
        <TextBlock HorizontalAlignment="Center" TextWrapping="Wrap" Text="Em qual ano você nasceu?" VerticalAlignment="Top" FontSize="18" Width="222" FontStyle="Italic" Margin="0,144,0,0"/>
        <Button x:Name="btnConsultar" Content="Consultar" HorizontalAlignment="Center" Margin="0,411,0,0" VerticalAlignment="Top" Height="40" Width="196" Foreground="White" FontSize="20" FontStyle="Italic" BorderBrush="Black" BorderThickness="1,1,4,4" Click="btnConsultar_Click">
            <Button.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="#FF070E6D" Offset="0.017"/>
                    <GradientStop Color="#FF286BFF" Offset="1"/>
                </LinearGradientBrush>
            </Button.Background>
        </Button>
        <Image x:Name="imgSigno" HorizontalAlignment="Left" Height="88" Margin="350,246,0,0" VerticalAlignment="Top" Width="96"/>
        <TextBlock x:Name="tblSigno" HorizontalAlignment="Center" Margin="0,350,0,0" TextWrapping="Wrap" Text="Seu signo é:" VerticalAlignment="Top" FontSize="20" Width="592" TextAlignment="Center" FontStyle="Italic"/>

    </Grid>
</Window>
