<Window x:Class="_04___Acumulador.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_04___Acumulador"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.Background>
            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                <GradientStop Color="#FFC6CCE9"/>
                <GradientStop Color="#FF728BD7" Offset="1"/>
                <GradientStop Color="#FFB0BEFF" Offset="0.542"/>
            </LinearGradientBrush>
        </Grid.Background>
        <Label x:Name="lblTitulo" Content="Incrementar ou Decrementar" FontFamily="Cambria" FontSize="36" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" HorizontalAlignment="Right" Width="780" Height="92" VerticalAlignment="Top" Margin="0,0,10,0"/>
        <Label x:Name="lblSubtitulo" Content="Acumulador" Margin="0,92,316,0" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" FontSize="20" FontFamily="Sitka Display Semibold" Height="40" VerticalAlignment="Top" HorizontalAlignment="Right" Width="168"/>
        <Button x:Name="btnIncrementar" Content="Incrementar" HorizontalAlignment="Left" Margin="50,252,0,0" Width="200" Foreground="Black" Click="btnIncrementar_Click" FontSize="18" Height="43" VerticalAlignment="Top">
            <Button.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="#FF0CADC8" Offset="0"/>
                    <GradientStop Color="#FF00EAFC" Offset="1"/>
                </LinearGradientBrush>
            </Button.Background>
        </Button>
        <Button x:Name="lblZerar" Content="Zerar" Margin="550,252,50,0" Foreground="Black" FontSize="18" Click="lblZerar_Click" Height="43" VerticalAlignment="Top">
            <Button.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="#FF0CADC8" Offset="0"/>
                    <GradientStop Color="#FF00EAFC" Offset="1"/>
                </LinearGradientBrush>
            </Button.Background>
        </Button>
        <Button x:Name="btnIncrementar_Copiar1" Content="Decrementar" HorizontalAlignment="Center" Width="200" Foreground="Black" Margin="0,252,0,0" FontSize="18" Click="btnIncrementar_Copiar1_Click" Height="43" VerticalAlignment="Top">
            <Button.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="#FF0CADC8" Offset="0"/>
                    <GradientStop Color="#FF00EAFC" Offset="1"/>
                </LinearGradientBrush>
            </Button.Background>
        </Button>
        <Label x:Name="lblContador" Content="0" HorizontalAlignment="Center" Margin="0,137,0,0" VerticalAlignment="Top" FontSize="48" Height="97" Width="700" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Background="{x:Null}" FontFamily="Modern No. 20"/>
        <Label x:Name="lblAlterar" Content="Alterar em:" Margin="50,330,550,25" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" FontSize="24" FontFamily="Sitka Display Semibold"/>
        <TextBox x:Name="txtAlterar" HorizontalAlignment="Left" Margin="225,356,0,0" TextWrapping="Wrap" Text="0" VerticalAlignment="Top" Width="132" TextAlignment="Center" FontSize="16" Height="28" />

    </Grid>
</Window>
