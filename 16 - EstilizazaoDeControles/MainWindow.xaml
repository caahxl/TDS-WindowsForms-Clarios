<Window x:Class="_16___EstilizazaoDeControles.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_16___EstilizazaoDeControles"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <TabControl>
            <TabItem Header="Manual">
                <Grid Background="#FFE5E5E5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    <WrapPanel Margin="238,53,256,53" Width="300" Height="300" >
                        <Label Content="Sarah"  Height="90" Width="100" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Background="#FFF9A8F4"/>
                        <Label Content="Ana"  Height="90" Width="100" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Background="#FFE9F1AE"/>
                        <Label Content="Guilerme"  Height="90" Width="100" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Background="#FFB7F399"/>
                        <Label Content="Rafa"  Height="89" Width="100" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Background="#FFA5AEFF"/>
                        <Label Content="Maria"  Height="89" Width="100" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Background="#FFFFA09D"/>
                        <Label Content="Milly"  Height="89" Width="100" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Background="#FFBEF8FF"/>
                        <Label Content="Alex" Height="90" Width="100" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Background="#FFFFCA75"/>
                        <Label Content="Gustavo"  Height="89" Width="100" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Background="#FF8AFFA2"/>
                        <Label Content="Luis"  Height="89" Width="100" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Background="#FF908FFF"/>
                    </WrapPanel>
                </Grid>
            </TabItem>
            <TabItem Header="Programatico">
                <Grid Background="#FFE5E5E5">
                    <WrapPanel x:Name="wrpFrog" Margin="226,58,226,58" Background="{DynamicResource {x:Static SystemColors.ScrollBarBrushKey}}"/>
                </Grid>
            </TabItem>
            <TabItem HorizontalAlignment="Center" Height="20" Header="Style" VerticalAlignment="Center" Width="54">
                <Grid Background="#FFE5E5E5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    <WrapPanel x:Name="wrpEstilo" Margin="237,71,256,35" Background="{DynamicResource {x:Static SystemColors.GradientActiveCaptionBrushKey}}">
                        <WrapPanel.Resources>
                            <Style TargetType="Label">
                                <Setter Property="Width" Value="100"/>
                                <Setter Property="Height" Value="100"/>
                                <Setter Property="FontSize" Value="12"/>
                                <Setter Property="VerticalContentAlignment" Value="Center"/>
                                <Setter Property="HorizontalContentAlignment" Value="Center"/>
                                <Setter Property="Background" Value="#FFFFFF"/>
                                <Setter Property="Foreground" Value="Black"/>
                            </Style>
                        </WrapPanel.Resources>
                        <Label Content="Sarah"  Background="#FFF9A8F4"/>
                        <Label Content="Ana"   Background="#FFE9F1AE"/>
                        <Label Content="Guilerme"  Background="#FFB7F399"/>
                        <Label Content="Rafa"  Background="#FFA5AEFF"/>
                        <Label Content="Maria"   Background="#FFFFA09D"/>
                        <Label Content="Milly"  Background="#FFBEF8FF"/>
                        <Label Content="Alex"  Background="#FFFFCA75"/>
                        <Label Content="Gustavo"  Background="#FF8AFFA2"/>
                        <Label Content="Luis" Background="#FF908FFF" />
                    </WrapPanel>

                </Grid>
            </TabItem>
        </TabControl>

    </Grid>
</Window>
