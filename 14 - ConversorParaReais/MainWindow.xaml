<Window x:Class="_14___ConversorParaReais.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_14___ConversorParaReais"
        mc:Ignorable="d"
        Title="MainWindow" Height="365" Width="567">
    <Grid Margin="1,0,-1,0">
        <Grid.Background>
            <ImageBrush ImageSource="/Imagens/fundo-azul-gradiente-de-luxo-abstrato-suave-azul-escuro-com-banner-de-estudio-de-vinheta-preta.jpg"/>
        </Grid.Background>
        <ComboBox x:Name="cmbMoedas" Margin="0,0,287,200" BorderThickness="1,1,1,1" DropDownClosed="cmbMoedas_DropDownClosed" FontSize="14" HorizontalAlignment="Right" Width="111" Height="26" VerticalAlignment="Bottom">
            <ComboBox.Background>
                <LinearGradientBrush EndPoint="0,1">
                    <GradientStop Color="#FFF0F0F0"/>
                    <GradientStop Color="White" Offset="1"/>
                </LinearGradientBrush>
            </ComboBox.Background>
            <ComboBoxItem Content="Dólar Americano"/>
            <ComboBoxItem Content="Euro"/>
            <ComboBoxItem Content="Yuan Chinês"/>
            <ComboBoxItem Content="Iene Japonês"/>
            <ComboBoxItem Content="Peso Mexicano"/>
        </ComboBox>
        <TextBox x:Name="txtValorEstrangeiro" Margin="0,0,157,199" TextWrapping="Wrap" Text="0,00" Background="{DynamicResource {x:Static SystemColors.ControlBrushKey}}" BorderBrush="#FFACACAC" BorderThickness="1,1,1,1" FontFamily="Cambria" RenderTransformOrigin="-0.342,0.499" IsEnabled="False" FontSize="14" HorizontalAlignment="Right" Width="100" Height="27" VerticalAlignment="Bottom"/>
        <TextBlock x:Name="tblMoedasRealBr" Margin="0,0,287,138" TextWrapping="Wrap" Text="Real Brasileiro" FontFamily="Cambria" Background="#FFF0F0F0" Foreground="Black" IsEnabled="False" FontSize="14" Height="26" VerticalAlignment="Bottom" HorizontalAlignment="Right" Width="111"/>
        <Image x:Name="imagensPaises" Margin="0,0,426,197" Source="/Imagens/EUA.png" Height="32" VerticalAlignment="Bottom" HorizontalAlignment="Right" Width="32"/>
        <Image Margin="0,0,426,135" Source="/Imagens/Brasil.png" Height="32" VerticalAlignment="Bottom" HorizontalAlignment="Right" Width="32"/>
        <ScrollBar x:Name="scrEstrangeiro" Margin="0,0,158,200" RenderTransformOrigin="0.5,0.5" ValueChanged="scrEstrangeiro_ValueChanged" Maximum="100000000" SmallChange="1" Height="25" VerticalAlignment="Bottom" HorizontalAlignment="Right" Width="17">
            <ScrollBar.RenderTransform>
                <TransformGroup>
                    <ScaleTransform ScaleX="1" ScaleY="1"/>
                    <SkewTransform/>
                    <RotateTransform Angle="180"/>
                    <TranslateTransform/>
                </TransformGroup>
            </ScrollBar.RenderTransform>
        </ScrollBar>
        <TextBlock x:Name="tblRealBr" Margin="0,0,157,138" TextWrapping="Wrap" Text="0,00" FontFamily="Cambria" Background="{DynamicResource {x:Static SystemColors.ControlBrushKey}}" OpacityMask="Black" IsEnabled="False" FontSize="14" HorizontalAlignment="Right" Width="100" Height="26" VerticalAlignment="Bottom"/>
        <Label Content="Conversor de Moedas" Margin="125,20,0,0" Foreground="White" FontFamily="Modern No. 20" FontSize="36" Background="{x:Null}" HorizontalAlignment="Left" Width="310" Height="48" VerticalAlignment="Top"/>
        <Separator HorizontalAlignment="Center" Margin="0,61,0,0" VerticalAlignment="Top" Height="14" Width="343" Background="Black"/>
    </Grid>

</Window>
